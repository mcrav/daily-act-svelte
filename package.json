{
	"name": "daily-act-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "dotenv -e .env.dev -- vite dev",
		"ci-checks": "CI=true npm run lint && vitest run && npm run check && npm run build:dev",
		"build:ci": "vite build",
		"build:ci-deployment": "cross-env IS_DEPLOYMENT=true vite build",
		"build:dev": "dotenv -e .env.dev -- vite build",
		"build:alt": "dotenv -e .env.alt -- vite build",
		"build:prod": "dotenv -e .env.prod -- vite build",
		"deploy:dev": "cross-env IS_DEPLOYMENT=true dotenv -e .env.dev -- npm run build:dev && firebase deploy --only hosting:dev --project dev",
		"deploy:alt": "cross-env IS_DEPLOYMENT=true dotenv -e .env.dev -- npm run build:alt && firebase deploy --only hosting:alt --project alt",
		"deploy:prod": "cross-env IS_DEPLOYMENT=true dotenv -e .env.prod -- npm run build:prod && firebase deploy --only hosting:prod --project prod",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"ngrok": "ngrok http --url=anchovy-wondrous-raven.ngrok-free.app 5173",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3",
		"@csstools/postcss-light-dark-function": "^2.0.7",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@iconify/svelte": "^4.2.0",
		"@inlang/paraglide-js": "1.11.8",
		"@playwright/test": "^1.49.1",
		"@skeletonlabs/skeleton": "^3.1.0",
		"@skeletonlabs/skeleton-svelte": "^1.0.0",
		"@storybook/addon-essentials": "^8.6.6",
		"@storybook/addon-svelte-csf": "^5.0.0-next.0",
		"@storybook/blocks": "^8.6.6",
		"@storybook/experimental-addon-test": "^8.6.6",
		"@storybook/svelte": "^8.6.6",
		"@storybook/sveltekit": "^8.6.6",
		"@storybook/test": "^8.6.6",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/canvas-confetti": "^1.9.0",
		"@types/seedrandom": "^3.0.8",
		"@vitest/browser": "^3.0.8",
		"@vitest/coverage-v8": "^3.0.8",
		"cross-env": "^7.0.3",
		"dotenv-cli": "^8.0.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"firebase-tools": "^14.0.1",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"playwright": "^1.51.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"storybook": "^8.6.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-sitemap": "^2.7.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.0",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@inlang/paraglide-sveltekit": "0.16.0",
		"@langchain/core": "^0.3.57",
		"@langchain/openai": "^0.5.11",
		"@sentry/sveltekit": "^9.10.1",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@tanstack/svelte-query": "^5.79.0",
		"@xstate/svelte": "^4.0.3",
		"axios": "^1.9.0",
		"canvas-confetti": "^1.9.3",
		"openai": "^4.100.0",
		"seedrandom": "^3.0.5",
		"xstate": "^5.19.2",
		"zod": "^3.25.36"
	}
}
